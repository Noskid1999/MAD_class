<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_qa1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/qa_q1" />

        <RadioButton
            android:id="@+id/rb_qa_opt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qa_q1_opt1" />

        <RadioButton
            android:id="@+id/rb_qa_opt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qa_q1_opt2" />

        <RadioButton
            android:id="@+id/rb_qa_opt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qa_q1_opt3" />

        <RadioButton
            android:id="@+id/rb_qa_opt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qa_q1_opt4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_qa_next"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:baselineAligned="false"
                android:text="@string/btn_next" />

            <Button
                android:id="@+id/btn_qa_previous"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/btn_prev" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>